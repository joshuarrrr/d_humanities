(function ($) {
$(document).ready(function() {
	var sidekeyword;
	var sidelocation;
	var sidecareersurl;
	var sidecampaigntracker;
	$('#submit-careers').click(function(event) {
		event.preventDefault();
		sidekeyword = $('#sidebar-career-keyword').val();
		sidelocation = "&radialtown=" + $('#sidebar-career-location').val();
		sidecampaigntracker = "&utm_source=ihe&utm_medium=editorial-site&utm_content=sidebar-link&utm_campaign=jobs";		
		sidecareersurl = 'https://careers.insidehighered.com/searchjobs/?keywords=' + sidekeyword + sidelocation + sidecampaigntracker; 		
		window.location.href = sidecareersurl;
	});   
});
