          function loadChartbeat() {
            window._sf_endpt=(new Date()).getTime();

              if (typeof(s) !== 'undefined') {
                  if (s.prop2)
                  {
                      _chartbeat_author = s.prop2.replace(/^.+:([^:]+)$/, '$1');
                  }
                  else
                  {
                      _chartbeat_author = '[no author]';
                  }

