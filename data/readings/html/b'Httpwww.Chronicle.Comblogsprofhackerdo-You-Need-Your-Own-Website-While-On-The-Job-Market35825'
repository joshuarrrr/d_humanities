            _sf_async_config.authors = _chartbeat_author;    //CHANGE THIS

            //lowercase path & remove trailing slash
            _sf_async_config.domain = _sf_async_config.domain.toLowerCase();
            _sf_async_config.path = _sf_async_config.path.toLowerCase();
            if(_sf_async_config.path.substr(-1) == "/") {
                _sf_async_config.path = _sf_async_config.path.slice(0, -1);
