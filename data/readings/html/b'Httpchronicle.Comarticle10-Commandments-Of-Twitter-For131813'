            e.setAttribute('src', '//static.chartbeat.com/js/chartbeat.js');
            document.body.appendChild(e);
          }

          if (window.attachEvent){
              window.attachEvent('onload', loadChartbeat);
          }else{
              window.addEventListener('load', loadChartbeat, false);
          }

        })();
    }
