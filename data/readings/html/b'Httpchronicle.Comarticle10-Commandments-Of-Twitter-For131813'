dd.setJobsDropdown();

/*
 * Modals
 * ------
 *
 * Modals
 */
var modals = new Modals();
modals.loginAuth();
modals.chronFrameOpen();
if ($('div[data-auto-open-modal-url]').length) {
  modals.autoOpen(
    $('div[data-auto-open-modal-url]').attr('data-auto-open-modal-url'),
    $('div[data-auto-open-modal-title]').attr('data-auto-open-modal-title')
  );
}

/*
 * Account Events
 * ------
 *
 * Username Generator
 * Logout
 */
var accounts = new Accounts();
accounts.logout();

/*
 * Top Jobs Slider
 * ------
 *
 * Generates a top jobs slider for each element
 */

var topJobs = new Slider();
$('.jobs__topjobs-slider').each(function() {
  topJobs.addSlider($(this), { random: true });
})

/*
* Vitae jobs
* show random 3 top jobs for vitae jobs widget
*/

var $top_jobs = $('.widgetname-vitaejobs .top-jobs-list li');
var numberOfJobsToDisplay = $top_jobs.length >= 3 ? 3 : $top_jobs.length;

if (numberOfJobsToDisplay > 0) {
    var randomJobs = [];

    while (randomJobs.length < numberOfJobsToDisplay) {
        var random = Math.floor(Math.random() * $top_jobs.length);

        if($.inArray(random, randomJobs) === -1) {
            randomJobs.push(random);
        }
    }

    $top_jobs.each(function(i) {
        if($.inArray(i, randomJobs) !== -1) {
            $(this).css('display', 'block');
        } else {
            $(this).remove()
        }
    });
}
/*
 * Layout
 * ------
 */
//var layout = new Layout();
//layout.findLayouts();


/*
 * Disqus
 * ------
 *
 * This module uses code from the disqus controller and view (externaljs module). The js module is in the modules
 * directory.
 */
if (typeof(disqus_shortname) === 'string') {
  var disqus = new Disqus();
}

